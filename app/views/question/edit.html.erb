    </div>
    <div class="field mp-3">
      <%= form.label :opt3 , class:"form-label" %>
      <%= form.text_field :opt3 ,class:"form-control" %><br>
    </div>
    <div class="field mp-3">
      <%= form.label :opt4 , class:"form-label"%>
      <%= form.text_field :opt4 ,class:"form-control" %><br>
    </div>
  <% end %>
  <div class="actions">
    <%= link_to 'Back', { controller: 'question', action: 'index'} , class:'btn btn-primary' %><br><br>
    <%= f.submit 'Update', class:'btn btn-primary' %>
  </div>
<% end %>
