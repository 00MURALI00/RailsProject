<%= form_for @note, url: {action: :update} do |f| %>
  <% if @note.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@note.errors.count, "error") %> prohibited this note from being saved:</h2>
      <ul>
        <% @note.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <h3>Edit Notes</h3>
  <div class="field">
    <%= f.label :name , class:'form-label'%>
    <%= f.text_field :name , class:'form-control'%>
  </div>
  <div class="field">
    <%= f.label :description , class:'form-label'%>
    <%= f.text_area :description , class:'form-control'%>
  </div>
  <div class="field">
    <%= f.label :file, class:'form-label'%>
    <%= f.file_field :file , class:'form-control'%>
  </div>
  <br>
  <div class="field">
    <%= f.hidden_field :course_id, value: params[:course_id]%>
  </div>
</div>
<div class="actions ui container">
  <%= link_to 'Back', { controller: 'notes', action: 'index'}, class:'btn btn-primary' %>
  <%= f.submit 'Update',class:'btn btn-primary'%>
</div>
<% end %>
</div>
